package org.xxjr.job.listener.cust;

import java.util.Date;

import org.ddq.common.constant.DuoduoConstant;
import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppProperties;
import org.ddq.common.context.AppResult;
import org.ddq.common.util.DateUtil;
import org.ddq.common.util.LogerUtil;
import org.ddq.job.util.JobUtil;
import org.ddq.common.core.service.RemoteInvoke;
import org.xxjr.sys.util.NumberUtil;
import org.xxjr.sys.util.ServiceKey;

/**
 * 优惠券的job
 * @author 1
 *
 */
public class CouponJobUtil {

	public static AppResult updateCouponStatus(Object processId){
		AppResult result = new AppResult();
		try {
			
			LogerUtil.log("CouponJobUtil updateCouponStatus >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> start");
			
			String today = DateUtil.toStringByParttern(new Date(), DateUtil.DATE_PATTERN_YYYY_MM_DD);
			
			AppParam updateParam = new AppParam("custCouponService", "updateCouponStatus");
			updateParam.addAttr("startDate", today);
			updateParam.addAttr("endDate", today);
			updateParam.setRmiServiceName(AppProperties
					.getProperties(DuoduoConstant.RMI_SERVICE_START + ServiceKey.Key_cust));

			result = RemoteInvoke.getInstance().call(updateParam);
			
			StringBuilder sb = new StringBuilder();
			if(result.isSuccess()){
				sb.append("激活券的数量：" + NumberUtil.getInt(result.getAttr("actvieCount"), 0)).append(";");
				sb.append("激活使用券的数量：" + NumberUtil.getInt(result.getAttr("useingCount"), 0)).append(";");
				sb.append("失效券的数量：" + NumberUtil.getInt(result.getAttr("invalidCount"), 0));
			}else{
				sb.append(result.getMessage());
			}
			JobUtil.addProcessExecute(processId, " CouponJobUtil updateCouponStatus msg:" + sb.toString());
			LogerUtil.log(" CouponJobUtil updateCouponStatus end >>>>>>>>>>>>>>>>>>msg:" + sb.toString());
		} catch (Exception e) {
			LogerUtil.error(CouponJobUtil.class, e, "updateCouponStatus >>>>>>>>>>>>>>>>>>error");
			JobUtil.addProcessExecute(processId, "CouponJobUtil updateCouponStatus 报错：" + e.getMessage() );
		}
		
		return result;
	}
}
