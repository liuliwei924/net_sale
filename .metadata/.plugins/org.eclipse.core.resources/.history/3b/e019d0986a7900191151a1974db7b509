package org.xxjr.job.listener.busi;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;
import org.ddq.common.constant.DuoduoConstant;
import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppProperties;
import org.ddq.common.context.AppResult;
import org.ddq.job.core.BaseExecteJob;
import org.ddq.common.core.service.RemoteInvoke;
import org.springframework.context.annotation.Lazy;
import org.springframework.stereotype.Component;
import org.xxjr.sys.util.ServiceKey;
/**
 * 抢单销售报表
 * @author sty
 *
 */
@Lazy
@Component
public class AutoDaiSaleSumJob implements BaseExecteJob {
	private static Logger log = LogManager.getLogger(AutoDaiSaleSumJob.class);

	@Override
	public AppResult executeJob(AppParam param) {
		AppResult result = new AppResult();
		try {
			AppParam daiParam = new AppParam();
			daiParam.setService("daiSaleSumService");
			daiParam.setMethod("insertSum");
			daiParam.setRmiServiceName(AppProperties.getProperties(DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_busi));
			result = RemoteInvoke.getInstance().call(daiParam);
		} catch (Exception e) {
			log.error("AutoDaiSaleSumJob executeJob error:", e);
			result.setSuccess(Boolean.FALSE);
			result.setMessage(e.getMessage());
		}
		return result;
	}

}