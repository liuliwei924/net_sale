package org.xxjr.job.listener;

import lombok.extern.slf4j.Slf4j;

import org.ddq.common.core.SpringAppContext;
import org.llw.ddq.job.core.ScheduleManager;
import org.llw.ddq.zk.client.ZkClientBean;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.EnableAutoConfiguration;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.autoconfigure.jdbc.DataSourceAutoConfiguration;
import org.springframework.context.annotation.ComponentScan;
import org.xxjr.job.listener.mq.JobMqReceiver;


@SpringBootApplication
@ComponentScan(basePackages = {"org.xxjr.*","org.ddq.*"})
@EnableAutoConfiguration(exclude = {DataSourceAutoConfiguration.class})
@Slf4j
public class JobListenerApplication {
	public static void main(String[] args) {
		log.info("=============xxjr-job-listener is run start===============");
		SpringApplication.run(JobListenerApplication.class, args);
		ZkClientBean clientBean = SpringAppContext.getBean(ZkClientBean.class);
		clientBean.contextInitialized();
		log.info("=============client is run success===============");
		ScheduleManager.getInstance().initSchedule();
		log.info("=============initSchedule is run success===============");
		JobMqReceiver jobMqReceiver = SpringAppContext.getBean(JobMqReceiver.class);
		jobMqReceiver.init();
		log.info("=============xxjr-job-listener is run success===============");
	}
}

