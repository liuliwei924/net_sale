package org.xxjr.cust.contact;

import java.util.Date;

import org.ddq.common.constant.DuoduoConstant;
import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppResult;
import org.ddq.common.core.service.BaseService;
import org.ddq.common.exception.AppException;
import org.springframework.context.annotation.Lazy;
import org.ddq.common.web.session.DuoduoSession;
import org.springframework.stereotype.Service;
import org.springframework.util.StringUtils;
import org.ddq.common.exception.DuoduoError;

@Lazy
@Service
public class CustContactService extends BaseService {
	private static final String NAMESPACE = "CUSTCONTACT";

	/**
	 * querys
	 * @param params
	 * @return
	 */
	public AppResult query(AppParam params) {
		return super.query(params, NAMESPACE);
	}
	
	/**
	 * queryByPage
	 * @param params
	 * @return
	 */
	public AppResult queryByPage(AppParam params) {
		return super.queryByPage(params, NAMESPACE);
	}
	
	/**
	 * queryCount
	 * @param params
	 * @return
	 */
	public AppResult queryCount(AppParam params) {
		int size = getDao().count(NAMESPACE, super.COUNT,params.getAttr(),params.getDataBase());
		AppResult result = new AppResult();
		result.putAttr(DuoduoConstant.TOTAL_SIZE, size);
		return result;
	}
	
	/**
	 * queryView
	 * @param params
	 * @return
	 */
	public AppResult queryView(AppParam params) {
		return super.queryByPage(params, NAMESPACE, "queryView", "queryViewCount");
	}
	
	/**
	 * queryViewCount
	 * @param params
	 * @return
	 */
	public AppResult queryViewCount(AppParam params) {
		int size = getDao().count(NAMESPACE, "queryViewCount",params.getAttr(),params.getDataBase());
		AppResult result = new AppResult();
		result.putAttr(DuoduoConstant.TOTAL_SIZE, size);
		return result;
	}
	
	/**
	 * queryShow
	 * @param params
	 * @return
	 */
	public AppResult queryShow(AppParam params) {
		return super.query(params, NAMESPACE, "queryShow");
	}
	
	/**
	 * insert
	 * @param params
	 * @return
	 */
	public AppResult insert(AppParam params) {
		params.addAttr("createTime", new Date());
		params.addAttr("createBy", DuoduoSession.getUserName());
		if(StringUtils.isEmpty(params.getAttr("isImportant"))){
			params.addAttr("isImportant", "0");
		}
		AppResult result = super.insert(params, NAMESPACE);
		
		Object tagIds = params.getAttr("tagIds");
		if(!StringUtils.isEmpty(tagIds)){
			//添加新的用户
			super.getDao().insert(CustContactTagService.NAMESPACE, "batchInsert", 
					params.getAttr(), params.getDataBase());
		}
		result.putAttr("contactId", params.getAttr("contactId"));
		return result;
	}
	
	/**
	 * update
	 * @param params
	 * @return
	 */
	public AppResult update(AppParam params) {
		return super.update(params, NAMESPACE);
	}
	
	/**
	 * updateTag
	 * @param params
	 * @return
	 */
	public AppResult updateTag(AppParam params) {
		
		AppResult result = new AppResult();
		if(!StringUtils.isEmpty(params.getAttr("tagIds"))){
			//删除标签用户
			super.getDao().insert(CustContactTagService.NAMESPACE, "batchDeleteContact", 
					params.getAttr(), params.getDataBase());
			//添加新的用户
			super.getDao().insert(CustContactTagService.NAMESPACE, "batchInsertContact", 
					params.getAttr(), params.getDataBase());
		}else{
			
			//删除相关的标签客户
			super.delete(params, CustContactTagService.NAMESPACE);
		}
		return result;
	}
	
	/**
	 * delete
	 * @param params
	 * @return
	 */
	public AppResult delete(AppParam params) {
		String ids = (String) params.getAttr("ids");
		AppResult  result = null;
		if (!StringUtils.isEmpty(ids)) {
			for (String id : ids.split(",")) {
				AppParam param = new AppParam();
				param.addAttr("contactId", id);
				//删除相关的标签客户
				super.delete(param, CustContactTagService.NAMESPACE);
				result = super.delete(param, NAMESPACE);
			}
		} else if (!StringUtils.isEmpty(params.getAttr("contactId")) &&
				!StringUtils.isEmpty(params.getAttr("customerId"))) {
			//删除相关的标签客户
			super.delete(params, CustContactTagService.NAMESPACE);
			result = super.delete(params, NAMESPACE);
		} else {
			throw new AppException(DuoduoError.DELETE_NO_ID);
		}
		return result;
	}
}
