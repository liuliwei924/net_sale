package org.xxjr.busi.util.borrow;

import java.util.HashMap;
import java.util.Map;

import org.ddq.active.mq.message.CustMessageSend;
import org.ddq.common.core.SpringAppContext;
import org.ddq.common.util.LogerUtil;
/***
 *抢单处理
 * @author qinxcb
 *
 */
public class BorrowRobMessage {
	
	static String messageKey_robFailure="robFailure";
	
	static String messageKey_robManSuccess="robManSuccess";
	
	
	/***
	 * 抢单失败的提醒
	 * @param robTime
	 */
	public static void failureRob(String customerId,String borrowId){
		try{
			CustMessageSend messageSend = SpringAppContext.getBean(CustMessageSend.class);
			
			Map<String,Object> params  = new HashMap<String,Object>();
			params.put("borrowId", borrowId);
			messageSend.sendCustMessage(customerId, messageKey_robFailure, params);
		}catch(Exception e){
			LogerUtil.error(BorrowRobMessage.class, e, "failureRob");
		}
	}
	
}
