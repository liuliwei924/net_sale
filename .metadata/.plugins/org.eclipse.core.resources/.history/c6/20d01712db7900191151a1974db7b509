package org.xxjr.mall.account.sys;

import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppResult;
import org.ddq.common.core.BaseController;
import org.ddq.common.web.session.RequestUtil;
import org.springframework.util.StringUtils;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.xxjr.mall.sys.CommonUtil;
import org.xxjr.mall.sys.ServerCallUtil;
import org.xxjr.mall.util.AdminUtil;

@RestController
@RequestMapping("/account/sys/")
public class SysParamController extends BaseController{
	
	/**
	 * 查询系统参数列表
	 * @param request
	 * @return
	 */
	@RequestMapping("sysParams/queryList")
	public AppResult queryList(){
		AppResult result = new AppResult();
		try {	
			AppParam param = new AppParam("sysParamsService","queryByPage");
			RequestUtil.setAttr(param, request);
			param.setOrderBy("createTime");
			param.setOrderValue("DESC");
			result = ServerCallUtil.doCallNoTx(param, ServerCallUtil.serverKey_admin);
		} catch (Exception e) {
			CommonUtil.commException(this.getClass(), e, result, "查询系统参数列表错误");
		}
		return result;
	}
	
	/**
	 * 删除系统参数
	 * @param request
	 * @return
	 */
	@RequestMapping("sysParams/delete")
	public AppResult delete(){
		AppResult result = new AppResult();
		try {	
			String paramKey = request.getParameter("paramKey");
			if (StringUtils.isEmpty(paramKey)) {
				return AdminUtil.reErrorMessage("paramKey不能为空");
			}
			AppParam param = new AppParam("sysParamsService","delete");
			param.addAttr("paramKey", paramKey);
			result = ServerCallUtil.doCall(param, ServerCallUtil.serverKey_admin);
		} catch (Exception e) {
			CommonUtil.commException(this.getClass(), e, result, "删除系统参数错误");
		}
		return result;
	}
	
	/**
	 * 修改系统参数
	 * @param request
	 * @return
	 */
	@RequestMapping("sysParams/update")
	public AppResult update(){
		AppResult result = new AppResult();
		try {	
			String paramKey = request.getParameter("paramKey");
			if (StringUtils.isEmpty(paramKey)) {
				return AdminUtil.reErrorMessage("请至少选择一项进行修改");
			}
			AppParam param = new AppParam("sysParamsService","update");
			RequestUtil.setAttr(param, request);
			param.addAttr("updateBy", AdminUtil.getCustName(request));
			result = ServerCallUtil.doCall(param, ServerCallUtil.serverKey_admin);
		} catch (Exception e) {
			CommonUtil.commException(this.getClass(), e, result, "修改系统参数错误");
		}
		return result;
	}
	
	/**
	 * 增加系统参数
	 * @param request
	 * @return
	 */
	@RequestMapping("sysParams/insert")
	public AppResult insert(){
		AppResult result = new AppResult();
		try {	
			String paramKey = request.getParameter("paramKey");
			String paramValue = request.getParameter("paramValue");
			if (StringUtils.isEmpty(paramValue) || StringUtils.isEmpty(paramKey)) {
				return AdminUtil.reErrorMessage("缺少必要参数");
			}
			AppParam param = new AppParam("sysParamsService","insert");
			RequestUtil.setAttr(param, request);
			result = ServerCallUtil.doCall(param, ServerCallUtil.serverKey_admin);
		} catch (Exception e) {
			CommonUtil.commException(this.getClass(), e, result, "增加系统参数错误");
		}
		return result;
	}
}
