package org.xxjr.mall.account.sys;

import java.util.List;
import java.util.Map;

import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppResult;
import org.ddq.common.core.BaseController;
import org.ddq.common.util.JsonUtil;
import org.ddq.common.web.session.RequestUtil;
import org.ddq.model.cache.RedisUtils;
import org.springframework.util.StringUtils;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.xxjr.mall.sys.CommonUtil;
import org.xxjr.mall.sys.ServerCallUtil;
import org.xxjr.mall.util.AdminUtil;

@RestController
@RequestMapping("/account/sys/")
public class RedisController extends BaseController{
	
	/**
	 * 查询缓存
	 * @param request
	 * @return
	 */
	@RequestMapping("redis/query")
	public AppResult query(){
		AppResult result = new AppResult();
		try {	
			String key = request.getParameter("key");
			Object obj = RedisUtils.getRedisService().get(key);
			StringBuffer value = new StringBuffer("");
			String objectType = "String";
			if(obj!=null){
				if(obj instanceof String){
					value.append(obj.toString());
				}else if(obj instanceof List){
					List<?> list = (List<?>) obj;
					for(Object o:list){
						value.append(JsonUtil.getInstance().object2JSON(o));
						objectType = "java.util.List";
					}
				}else if(obj instanceof Map){
					value.append(JsonUtil.getInstance().object2JSON(obj));
					objectType = "java.util.Map";
				}else{
					value.append("未知对象：" + obj.toString());
					objectType = "object";
				}
			}
			result.putAttr("objectType", objectType);
			result.putAttr("values", value);
		} catch (Exception e) {
			CommonUtil.commException(this.getClass(), e, result, "查询缓存错误");
		}
		return result;
	}
	
	/**
	 * 删除缓存
	 * @param request
	 * @return
	 */
	@RequestMapping("redis/delete")
	public AppResult delete(){
		AppResult result = new AppResult();
		try {	
			String key = request.getParameter("key");
			boolean del = RedisUtils.getRedisService().del(key);
			result.setSuccess(del);
		} catch (Exception e) {
			CommonUtil.commException(this.getClass(), e, result, "删除缓存错误");
		}
		return result;
	}
	
	/**
	 * 设置缓存
	 * @param request
	 * @return
	 */
	@RequestMapping("redis/update")
	public AppResult update(){
		AppResult result = new AppResult();
		try {	
			String key = request.getParameter("key");
			String value = request.getParameter("values");
			String objectType = request.getParameter("objectType");
			if (StringUtils.isEmpty(key) || StringUtils.isEmpty(value)
					|| StringUtils.isEmpty(objectType)) {
				return AdminUtil.reErrorMessage("缺少必传参数");
			}
			Object valueObj = null;
			switch (objectType) {
			case "java.util.Map":
				valueObj = JsonUtil.getInstance().json2Object(value, Map.class);
				break;
			case "java.util.List":
				value = "["+value+"]";
				valueObj = JsonUtil.getInstance().json2Object(value, List.class);
				break;
			default:
				valueObj = value;
				break;
			}
			
			int length = RedisUtils.getRedisService().set(key, valueObj);
			result.setSuccess(length > 0);
		} catch (Exception e) {
			CommonUtil.commException(this.getClass(), e, result, "设置缓存错误");
		}
		return result;
	}
	
	/**
	 * 查询缓存key列表
	 * @param request
	 * @return
	 */
	@RequestMapping("redisKey/queryRedisKeyList")
	public AppResult queryRediskeyList(){
		AppResult result = new AppResult();
		try{
			AppParam params = new AppParam();
			RequestUtil.setAttr(params, request);
			params.setService("redisKeysService");
			params.setMethod("queryByPage");
			result = ServerCallUtil.doCallNoTx(params,ServerCallUtil.serverKey_node);
		}catch(Exception e){
			CommonUtil.commException(this.getClass(), e, result, "查询缓存key列表错误");
		}	
		return result;
	}
}
