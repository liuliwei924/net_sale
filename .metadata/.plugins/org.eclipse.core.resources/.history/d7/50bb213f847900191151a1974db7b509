package org.xxjr.job.listener.busi;

import java.util.Map;

import org.ddq.common.constant.DuoduoConstant;
import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppProperties;
import org.ddq.common.context.AppResult;
import org.ddq.common.util.LogerUtil;
import org.ddq.common.util.StringUtil;
import org.llw.ddq.job.core.BaseExecteJob;
import org.llw.ddq.job.util.JobConstant;
import org.llw.ddq.job.util.JobUtil;
import org.ddq.common.core.service.RemoteInvoke;
import org.springframework.context.annotation.Lazy;
import org.springframework.stereotype.Component;
import org.xxjr.cust.util.CustConstant;
import org.xxjr.sys.util.ServiceKey;
import org.xxjr.sys.util.SysParamsUtil;

/***
 * 待确定的推广记录转移客服系统
 *
 */
@Lazy
@Component
public class AutoTgRecordJob implements BaseExecteJob {
	
	@Override
	public AppResult executeJob(AppParam param) {
		AppResult result = new AppResult();
		Object processId = param.getAttr(JobConstant.KEY_processId);
		try {
			LogerUtil.log("AutoTgRecordJob >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> start");
			int everPage = 1;
			int exceedHours = SysParamsUtil.getIntParamByKey("tgRecordExceedHours", 2);// 超过2小时
			// 查询待确定的推广记录
			AppParam queryParam = new AppParam("daiBorrowReTgService","queryRobBorrow");
			queryParam.addAttr("receiveStatus", "0");// 待确定
			queryParam.addAttr("exceedHours", exceedHours);
			queryParam.setCurrentPage(everPage);
			queryParam.setEveryPage(50);
			queryParam.setRmiServiceName(AppProperties.getProperties(DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_busi));
			AppResult queryResult = RemoteInvoke.getInstance().callNoTx(queryParam);
			while (queryResult.getRows().size() > 0) {
				// 推广记录转移客服系统
				AppParam delTgRecord = new AppParam("daiBorrowReTgService","delTgRecord");
				AppParam tgParam = new AppParam("applyService","newAppLoanApply");
				for(Map<String,Object> row : queryResult.getRows()){
					Object receiveId = row.remove("receiveId");
					Object borrowId = row.remove("borrowId");
					// 再将推广记录转移客户系统
					tgParam.clearAttr();
					row.put("status", "0");
					row.put("haveDetail", "1");// 已填写信息
					row.put("applyTime", row.get("applyTime"));// 申请时间
					row.put("channelDetail", this.getChannelDetail(StringUtil.getString(row.get("sourceType"))));
					row.put("applyName", row.get("userName"));// 申请人姓名
					row.put("applyAmount", row.get("loanAmount"));// 申请金额
					tgParam.addAttrs(row);
					tgParam.setRmiServiceName(AppProperties.getProperties(DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_busi_in));
					try {
						AppResult applyResult = RemoteInvoke.getInstance().call(tgParam);
						// 转移成功，删除推广记录
						if (applyResult.isSuccess() || "100".equals(applyResult.getErrorCode())) {
							delTgRecord.clearAttr();
							delTgRecord.addAttr("receiveId", receiveId);
							delTgRecord.addAttr("borrowId", borrowId);
							delTgRecord.setRmiServiceName(AppProperties.getProperties(DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_busi));
							RemoteInvoke.getInstance().call(delTgRecord);
						}
					} catch (Exception e) {
						LogerUtil.error(AutoTgRecordJob.class, e, "delTgRecord error");
						JobUtil.addProcessExecute(processId, "delTgRecord error：" + e.getMessage());
					}
				}
				everPage++;
				queryParam.setCurrentPage(everPage);
				queryResult = RemoteInvoke.getInstance().callNoTx(queryParam);
			}
			LogerUtil.log("AutoTgRecordJob >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> end");
		} catch (Exception e) {
			LogerUtil.error(AutoTgRecordJob.class, e, "AutoTgRecordJob >>>>>>>>>>>>>>>>>>error");
			JobUtil.addProcessExecute(processId, "推广记录转移客服系统报错：" + e.getMessage());
		}
		return result;
	}	
	
	//sourceType 1-微信申请借款 2-卡牛数据,3-网页申请 4-第一贷款  5-转xxjr  6-推广申请
	private String getChannelDetail (String sourceType) {
		switch (sourceType) {
		case "1":
			return CustConstant.CUST_sourceType_WX;
		case "3":
			return CustConstant.CUST_sourceType_WEB;
		case "6":
			return CustConstant.CUST_sourceType_WEB;
		default:
			break;
		}
		return CustConstant.CUST_sourceType_WEB;
	}

}
