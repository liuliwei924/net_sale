package org.xxjr.tools.util;

import java.util.HashMap;
import java.util.Map;

import org.ddq.common.constant.DuoduoConstant;
import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppProperties;
import org.ddq.common.context.AppResult;
import org.ddq.common.core.service.RemoteInvoke;

/**
 * 信贷员圈子工具类
 * @author Administrator
 *
 */
public class CircleUtil {
	
	/** 个人二维码 **/
	public final static String CIRCLE_TYPE_1 = "1";
	/** 群二维码 **/
	public final static String CIRCLE_TYPE_2 = "2"; 

	/**
	 * 查询个人二维码信息
	 * @param openid
	 * @return
	 */
	public static Map<String, Object> queryPersonalInfo(String openid){
		AppParam params = new AppParam();
		params.setService("circlePersonalService");
		params.setMethod("query");
		params.addAttr("openid", openid);
		params.setRmiServiceName(AppProperties.getProperties(DuoduoConstant.RMI_SERVICE_START+"tools"));
		AppResult result = RemoteInvoke.getInstance().call(params);
		if(result.getRows().size() > 0){
			return result.getRow(0);
		}
		return new HashMap<String, Object>();
	}
	
	/**
	 * 查询群二维码信息
	 * @param openid
	 * @return
	 */
	public static Map<String, Object> queryQunInfo(String openid){
		AppParam params = new AppParam();
		params.setService("circleQunService");
		params.setMethod("query");
		params.addAttr("openid", openid);
		params.setRmiServiceName(AppProperties.getProperties(DuoduoConstant.RMI_SERVICE_START+"tools"));
		AppResult result = RemoteInvoke.getInstance().call(params);
		if(result.getRows().size() > 0){
			return result.getRow(0);
		}
		return new HashMap<String, Object>();
	}
}
