package org.xxjr.store.web.action.account.sms;

import java.io.UnsupportedEncodingException;

import javax.servlet.http.HttpServletRequest;

import org.ddq.common.constant.DuoduoConstant;
import org.ddq.common.context.AppParam;
import org.ddq.common.context.AppProperties;
import org.ddq.common.context.AppResult;
import org.ddq.common.exception.ExceptionUtil;
import org.ddq.common.util.LogerUtil;
import org.ddq.common.web.session.DuoduoSession;
import org.ddq.common.web.session.RequestUtil;
import org.ddq.common.core.service.RemoteInvoke;
import org.springframework.stereotype.Controller;
import org.springframework.util.StringUtils;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.xxjr.sys.util.ServiceKey;

/**
 * 短信模板
 * 
 * @author gongww
 *
 */
@Controller()
@RequestMapping("/account/sms/smsTemp")
public class SmsTempAction {

	/**
	 * 分页查询短信模板列表
	 * @param request
	 * @return
	 */
	@RequestMapping("querySmsTempList")
	@ResponseBody
	public AppResult querySmsTempList(HttpServletRequest request) {
		AppResult result = new AppResult();
		try {
			AppParam param = new AppParam("smsTemplateService","queryByPage");
			RequestUtil.setAttr(param, request);
			param.setRmiServiceName(AppProperties.getProperties(
					DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_sys));
			result = RemoteInvoke.getInstance().callNoTx(param);
		} catch (Exception e) {
			LogerUtil.error(SmsTempAction.class, e, "querySmsTempList error");
			ExceptionUtil.setExceptionMessage(e, result, DuoduoSession.getShowLog());
		}
		return result;
	}
	
	/**
	 * 查询短信模板列表
	 * @param request
	 * @return
	 */
	@RequestMapping("querySmsTempInfo")
	@ResponseBody
	public AppResult querySmsTempInfo(HttpServletRequest request) {
		AppResult result = new AppResult();
		try {
			AppParam param = new AppParam("smsTemplateService","query");
			RequestUtil.setAttr(param, request);
			param.setRmiServiceName(AppProperties.getProperties(
					DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_sys));
			result = RemoteInvoke.getInstance().callNoTx(param);
		} catch (Exception e) {
			LogerUtil.error(SmsTempAction.class, e, "querySmsTempInfo error");
			ExceptionUtil.setExceptionMessage(e, result, DuoduoSession.getShowLog());
		}
		return result;
	}

	
	/**
	 * 添加短信模板信息
	 * @param request
	 * @return
	 */
	@RequestMapping("addSmsTempInfo")
	@ResponseBody
	public AppResult addSmsTempInfo(HttpServletRequest request) {
		AppResult result = new AppResult();
		try {
			AppParam param = new AppParam("smsTemplateService","insert");
			RequestUtil.setAttr(param, request);
			param.setRmiServiceName(AppProperties.getProperties(
					DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_sys));
			result = RemoteInvoke.getInstance().callNoTx(param);
		} catch (Exception e) {
			LogerUtil.error(SmsTempAction.class, e, "addSmsTempInfo error");
			ExceptionUtil.setExceptionMessage(e, result, DuoduoSession.getShowLog());
		}
		return result;
	}
	
	/**
	 * 修改短信模板信息
	 * @param request
	 * @return
	 */
	@RequestMapping("modifySmsTempInfo")
	@ResponseBody
	public AppResult modifySmsTempInfo(HttpServletRequest request) {
		AppResult result = new AppResult();
		try {
			Object tempId = request.getParameter("tempId");
			if (StringUtils.isEmpty(tempId)) {
				result.setMessage("短信模板ID为空！");
				result.setSuccess(Boolean.FALSE);
				return result;
			}
			AppParam param = new AppParam("smsTemplateService","update");
			RequestUtil.setAttr(param, request);
			param.setRmiServiceName(AppProperties.getProperties(
					DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_sys));
			result = RemoteInvoke.getInstance().callNoTx(param);
		} catch (Exception e) {
			LogerUtil.error(SmsTempAction.class, e, "modifySmsTempInfo error");
			ExceptionUtil.setExceptionMessage(e, result, DuoduoSession.getShowLog());
		}
		return result;
	}
	
	/***
	 * 删除短信模板信息
	 * 
	 * @param request
	 * @return
	 */
	@RequestMapping("deleteSmsTempInfo")
	@ResponseBody
	public AppResult deleteSmsTempInfo(HttpServletRequest request) throws UnsupportedEncodingException {
		AppResult result = new AppResult();
		try {
			Object tempId = request.getParameter("tempId");
			if (StringUtils.isEmpty(tempId)) {
				result.setMessage("短信模板ID为空！");
				result.setSuccess(Boolean.FALSE);
				return result;
			}
			AppParam param = new AppParam("smsTemplateService","delete");
			RequestUtil.setAttr(param, request);
			param.setRmiServiceName(AppProperties.getProperties(DuoduoConstant.RMI_SERVICE_START+ServiceKey.Key_open));
			result = RemoteInvoke.getInstance().call(param);
		} catch (Exception e) {
			LogerUtil.error(SmsTempAction.class, e, "deleteSmsTempInfo error ");
			ExceptionUtil.setExceptionMessage(e, result,DuoduoSession.getShowLog());
		}
		return result;
	}
	
}
